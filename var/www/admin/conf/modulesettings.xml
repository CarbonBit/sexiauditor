<?xml version="1.0" encoding="UTF-8"?>
<settings>
  <setting>
    <id>dailySchedule</id>
    <label>Choose the hour used for daily schedule (appliance use UTC format)</label>
    <value>8</value>
	<type>daily</type>
  </setting>
  <setting>
    <id>weeklySchedule</id>
    <label>Choose the day used for weekly schedule</label>
    <value>6</value>
	<type>weekly</type>
  </setting>
  <setting>
    <id>monthlySchedule</id>
    <label>Choose the day used for monthly schedule (beware of short/long months)</label>
    <value>6</value>
	<type>monthly</type>
  </setting>
  <setting>
    <id>thresholdHistory</id>
    <label>Number of days before data is purged (0 to disabled)</label>
    <value>0</value>
	<type>number</type>
  </setting>
  <setting>
    <id>thresholdCPURatio</id>
    <label>Threshold for vCPU/pCPU ratio check</label>
    <value>2</value>
	<type>number</type>
  </setting>
  <setting>
    <id>showPlainLicense</id>
    <label>Display plain license in License Report instead of '####'</label>
    <value>disable</value>
	<type>boolean</type>
  </setting>
  <setting>
    <id>vcSessionAge</id>
    <label>Number of days before a session is defined as 'old'</label>
    <value>2</value>
	<type>number</type>
  </setting>
  <setting>
    <id>datastoreFreeSpaceThreshold</id>
    <label>Datastore free space threshold %</label>
    <value>30</value>
	<type>number</type>
  </setting>
  <setting>
    <id>datastoreOverallocation</id>
    <label>Datastore OverAllocation %</label>
    <value>30</value>
	<type>number</type>
  </setting>
  <setting>
    <id>networkDVSVSSportsfree</id>
    <label>Threshold of free port for DVS needed</label>
    <value>123</value>
	<type>number</type>
  </setting>
  <setting>
    <id>vmSnapshotAge</id>
    <label>Number of days before a snapshot is defined as 'old'</label>
    <value>98</value>
	<type>number</type>
  </setting>
  <setting>
    <id>smtpAddress</id>
    <label>SMTP server address (IP, or FQDN) to forward email to</label>
    <value>xxx</value>
	  <type>text</type>
  </setting>
  <setting>
    <id>senderMail</id>
    <label>Sender email to be used for report export feature</label>
    <value>xxx</value>
	<type>email</type>
  </setting>
  <setting>
    <id>recipientMail</id>
    <label>Recipient email to be used for report export feature</label>
    <value>xxx</value>
	<type>email</type>
  </setting>
  <setting>
    <id>pdfAuthor</id>
    <label>Username that will be used as the 'Author' of generated PDFs</label>
    <value>Gordon Freeman</value>
	<type>text</type>
  </setting>
  <setting>
    <id>showEmpty</id>
    <label>Show checks that return empty values (ie when there is nothing to report)</label>
    <value>enable</value>
	<type>boolean</type>
  </setting>
  <setting>
    <id>showAuthors</id>
    <label>Show authors page of generated PDF's, be aware that disabling it may kill some kitten...</label>
    <value>enable</value>
	<type>boolean</type>
  </setting>
</settings>
